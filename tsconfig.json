{
  "compilerOptions": {
    "baseUrl": ".", 
    "paths": {
      "~/*": ["src/*"]
    },
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}